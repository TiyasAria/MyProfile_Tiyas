<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backku"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginRight="@dimen/_20dp"
        android:fontFamily="@font/sapi_lezat"
        android:text="@string/txt_mks"
        android:textColor="#E91E63"
        android:textSize="@dimen/_40sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="134dp"
        android:layout_height="157dp"
        android:layout_marginTop="@dimen/_50dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/tiyas2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/txt_diri"
        android:textColor="#000000"
        android:textSize="@dimen/_50sp"
        android:textStyle="bold"
        android:fontFamily="@font/ayam_enak"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:fontFamily="@font/komik"
            android:text="@string/txt_one"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_15sp" />

        <TextView
            android:layout_width="@dimen/_200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:fontFamily="@font/komik"
            android:text="@string/txt_two"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_15sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="153dp"
        android:layout_height="69dp"
        android:layout_marginStart="@dimen/_205dp"
        android:layout_marginTop="@dimen/_10dp"
        android:src="@drawable/love"
        android:contentDescription="@string/txt_page" />

</LinearLayout>